page{
	background: #eee;
}
.order-view {
	width: 100%;
	margin-top: 20rpx;
	background: #fff;
	border-radius: 20rpx;
}
.order-top {
	width: 100%;
	background: #e3fff1;
	height: 60rpx;
	line-height: 60rpx;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
}
.order-title {
	width: 96%;
	color: #24c373;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 26rpx;
	margin: 0 auto;
}
.count {
	font-size: 26rpx;
	font-weight: normal;
	margin-left: 10rpx;
}
.order-center {
	width: 96%;
	margin:0 auto;
	font-weight: bold;
	font-size: 30rpx;
		margin-top: 10rpx;
	/* height: 60rpx;
	line-height: 60rpx; */
}
.time-price{
	width:100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-weight: normal;
	color:#8d8d8d;
	font-size: 24rpx;
}
.price{
	display: flex;
	align-items: baseline;
}
.order-bottom {
	width:96%;
	display: flex;
	justify-content: flex-end;
	margin: 0 auto;
	padding-bottom: 10rpx;
	margin-top: 10rpx;
}
.button{
	width:130rpx;
	height: 50rpx;
	border-radius: 20rpx;
	border:2rpx solid #999;
	text-align: center;
	line-height: 50rpx;
	font-size: 28rpx;
}

